import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import javax.servlet.annotation.WebServlet;
import java.sql.*;

@WebServlet("/servlet/Authent")
public class Authent extends HttpServlet
{
    public void service( HttpServletRequest req, HttpServletResponse res)
	throws ServletException, IOException
    {
	//Debut servlet
	PrintWriter out = res.getWriter();
	res.setContentType( "text/html");
	out.println("<head><title>Authent</title></head><body><center>");
	out.println("<h1>Authentification</h1>");
	
	
	Connection con = null;

	try{
	    //Connection afin de recuperer la table
	    Class.forName("org.postgresql.Driver");
	    String url="jdbc:postgresql://psqlserv/n3p1";
	    con = DriverManager.getConnection(url,"massiaua","moi");
	    Statement stm = con.createStatement();

	    //Recuperation valeur saisie
	    String login = req.getParameter("login");
	    String mdp = req.getParameter("mdp");

	    String query = "Select * from Personne2";
	    ResultSet rs = stm.executeQuery(query);

	    out.println("<table><th>Nom</th><th>Prenom</th><th>Adresse</th><th>Email</th><th>Tel</th><th>DateNaiss</th>");

	    while(rs.next()){
		if(login.equals(rs.getString(1)) && mdp.equals(rs.getString(2))){
		    out.println("<tr><td>"+rs.getString(3)+"</td><td>"+rs.getString(4)+"</td><td>"+rs.getString(5)+"</td><td>"+rs.getString(6)+"</td><td>"+rs.getString(7)+"</td><td>"+rs.getString(8)+"</td></tr>");
		}
	    }

	    out.println("</table>");
	}catch(Exception e){
	    out.println(e.getMessage());
	}finally{
	    try{
		con.close();
	    }catch(Exception e){
		out.println(e.getMessage());
	    }
	}
    }
}
