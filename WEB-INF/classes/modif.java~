import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import javax.servlet.annotation.WebServlet;
import java.sql.*;

@WebServlet("/servlet/modif")
public class modif extends HttpServlet
{
    public void service( HttpServletRequest req, HttpServletResponse res)
	throws ServletException, IOException
    {
	//Debut servlet
	PrintWriter out = res.getWriter();
	res.setContentType( "text/html");
	out.println("<head><title>Authent</title></head><body><center>");
	
	Connection con = null;

	try{
	    //Session
	    HttpSession session = req.getSession( true );
	    //Connection afin de recuperer la table
	    Class.forName("org.postgresql.Driver");
	    String url="jdbc:postgresql://psqlserv/n3p1";
	    con = DriverManager.getConnection(url,"massiaua","moi");
	    Statement stm = con.createStatement();

	    //Recuperation valeur saisie
	    String login = (String)session.getAttribute("login");
	    String mdp = (String)session.getAttribute("mdp");

	    out.println("<h1>"+login+"</h1>");

	    String query = "SELECT * FROM Personne2 WHERE login LIKE '"+login+"' AND mdp LIKE '"+mdp+"' ;";
	    ResultSet rs = stm.executeQuery(query);
	    rs.next();

	    login=rs.getString(1);
	    mdp=rs.getString(2);
	    String nom = rs.getString(3);
	    String prenom = rs.getString(4);
	    String adresse = rs.getString(5);
	    String email = rs.getString(6);
	    String tel = rs.getString(7);
	    String datenaiss = rs.getString(8);

	    //Saisie informations
	    out.println("<form action=\"modif\" methode=post>");
	    out.println("Login : <p><input type=\"text\" name=login value="+login+"/></p>");
	    out.println("Mdp : <p><input type=\"text\" name=mdp value="+mdp+"/></p>");
	    out.println("Nom : <p><input type=\"text\" name=nom value="+nom+"/></p>");
	    out.println("Prenom : <p><input type=\"text\" name=prenom value="+prenom+"/></p>");
	    out.println("Adresse : <p><input type=\"text\" name=adresse value="+adresse+"/></p>");
	    out.println("Email : <p><input type=\"text\" name=email value="+email+"/></p>");
	    out.println("Tel : <p><input type=\"text\" name=tel value="+tel+"/></p>");
	    out.println("Datenaiss : <p><input type=\"text\" name=datenaiss value="+datenaiss+"/></p>");
	    out.println("<input type=\"submit\" value=\"Valider\" />");

	    query="UPDATE Personne2 SET login='"+req.getParameter("login")+"', mdp='"+req.getParameter("mdp")+"', nom='"+req.getParameter("nom")+"', prenom='"+req.getParameter("prenom")+"', adresse='"+req.getParameter("adresse")+"', email='"+req.getParameter("email")+"', tel='"+req.getParameter("tel")+"', datenaiss='"+req.getParameter("datenaiss")+"' ;";

	}catch(Exception e){
	    out.println(e.getMessage());
	}finally{
	    try{
		con.close();
	    }catch(Exception e){
		out.println(e.getMessage());
	    }
	}
    }
}
